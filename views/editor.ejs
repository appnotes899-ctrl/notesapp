<!DOCTYPE html>
<html class="light" lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>Note Editor</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet"/>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#2b8cee",
                        "background-light": "#f6f7f8",
                        "background-dark": "#101922",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "2xl": "1rem",
                        "3xl": "1.5rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        /* Hide scrollbar for Chrome, Safari and Opera */
        .no-scrollbar::-webkit-scrollbar {
            display: none;
        }
        /* Hide scrollbar for IE, Edge and Firefox */
        .no-scrollbar {
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;  /* Firefox */
        }
        .fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .slide-up {
            animation: slideUp 0.3s ease-out;
        }
        @keyframes slideUp {
            from { transform: translateY(100%); }
            to { transform: translateY(0); }
        }
    </style>
</head>
<body class="bg-gray-100 dark:bg-gray-900 font-display text-base flex justify-center min-h-screen">
    <!-- Mobile Container -->
    <div class="relative flex h-screen w-full max-w-md flex-col bg-background-light dark:bg-background-dark shadow-2xl overflow-hidden group/design-root">
        <!-- Top Navigation Bar -->
        <header class="flex items-center justify-between px-4 py-4 z-20 fade-in">
            <a id="back-btn" href="/" role="button" class="flex h-10 w-10 items-center justify-center rounded-full text-gray-700 dark:text-gray-200 hover:bg-gray-200/50 dark:hover:bg-white/10 transition-colors">
                <span class="material-symbols-outlined" style="font-size: 24px;">arrow_back_ios_new</span>
            </a>
            <div class="flex items-center gap-1">
                <!-- Save Status Indicator -->
                <span id="save-status" class="text-xs font-medium text-gray-400 dark:text-gray-500 px-3 py-2">Saved</span>
                <!-- Pin Indicator -->
                <button id="pin-btn" class="flex h-10 w-10 items-center justify-center rounded-full text-gray-700 dark:text-gray-200 hover:bg-primary/10 transition-colors" title="Pin this note">
                    <span class="material-symbols-outlined pin-icon">push_pin</span>
                </button>
                <button id="menu-btn" class="flex h-10 w-10 items-center justify-center rounded-full text-gray-700 dark:text-gray-200 hover:bg-gray-200/50 dark:hover:bg-white/10 transition-colors">
                    <span class="material-symbols-outlined" style="font-size: 24px;">more_vert</span>
                </button>
            </div>
        </header>
        <!-- Main Editor Area -->
        <main class="flex-1 overflow-y-auto px-6 pb-32 no-scrollbar fade-in" style="animation-delay: 0.1s;">
            <!-- Meta Information -->
            <div class="flex items-center gap-2 mb-4 animate-fade-in">
                <span class="text-xs font-medium text-gray-400 dark:text-gray-500 uppercase tracking-wide">Last edited <%= note ? formatDate(note.updatedAt) : 'now' %></span>
                <span class="h-1 w-1 rounded-full bg-gray-300 dark:bg-gray-600"></span>
                <span class="text-xs font-medium text-gray-400 dark:text-gray-500 uppercase tracking-wide">Saved</span>
            </div>
            <!-- Title Input -->
            <div class="w-full mb-4">
                <textarea id="title-input" class="w-full resize-none overflow-hidden bg-transparent border-none p-0 text-3xl font-bold leading-tight text-gray-900 dark:text-white placeholder:text-gray-300 dark:placeholder:text-gray-600 focus:ring-0" placeholder="Title" rows="2"><%= note ? note.title : '' %></textarea>
            </div>
            <!-- Tags/Labels Section -->
            <div class="flex flex-wrap gap-2 mb-6" id="tags-container">
                <% if (note && note.tags && note.tags.length) { %>
                    <% note.tags.forEach(tag => { %>
                        <span class="inline-flex items-center rounded-md bg-primary/10 px-2 py-1 text-xs font-medium text-primary ring-1 ring-inset ring-primary/20">#<%= tag %></span>
                    <% }) %>
                <% } %>
            </div>
            <!-- Body Input -->
            <div class="w-full h-full min-h-[500px]">
                <textarea id="content-input" class="w-full h-full resize-none bg-transparent border-none p-0 text-lg font-normal leading-relaxed text-gray-700 dark:text-gray-300 placeholder:text-gray-400 dark:placeholder:text-gray-600 focus:ring-0" placeholder="Start typing..."><%= note ? note.content : '' %></textarea>
            </div>
        </main>
        <!-- Bottom Sheet (Hidden by default) -->
        <div id="bottom-sheet" class="absolute bottom-0 left-0 right-0 z-30 transform translate-y-full transition-transform duration-300">
            <!-- Backdrop Gradient for smooth transition -->
            <div class="h-12 w-full bg-gradient-to-t from-black/5 to-transparent dark:from-black/40"></div>
            <div class="bg-white dark:bg-[#1e2933] rounded-t-3xl shadow-[0_-8px_30px_rgba(0,0,0,0.12)] border-t border-gray-100 dark:border-gray-800 pb-8 slide-up">
                <!-- Handle -->
                <div class="flex justify-center pt-3 pb-2 w-full cursor-grab active:cursor-grabbing">
                    <div class="h-1.5 w-10 rounded-full bg-gray-300 dark:bg-gray-600"></div>
                </div>
                <div class="px-6 py-2">
                    <!-- Color Picker Section -->
                    <div class="mb-6">
                        <p class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase tracking-wider mb-3 ml-1">Note Color</p>
                        <div class="flex gap-4 overflow-x-auto pb-2 no-scrollbar px-1">
                            <!-- White/Default -->
                            <button class="color-btn relative flex-shrink-0 size-10 rounded-full border border-gray-200 dark:border-gray-600 bg-background-light dark:bg-background-dark focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 dark:focus:ring-offset-[#1e2933]" data-color="default">
                                <span class="absolute inset-0 flex items-center justify-center text-primary dark:text-white">
                                    <span class="material-symbols-outlined text-lg check-icon">check</span>
                                </span>
                            </button>
                            <!-- Red -->
                            <button class="color-btn flex-shrink-0 size-10 rounded-full bg-red-100 dark:bg-red-900/40 border border-transparent hover:border-red-300 transition-all" data-color="red"></button>
                            <!-- Yellow -->
                            <button class="color-btn flex-shrink-0 size-10 rounded-full bg-amber-100 dark:bg-amber-900/40 border border-transparent hover:border-amber-300 transition-all" data-color="yellow"></button>
                            <!-- Green -->
                            <button class="color-btn flex-shrink-0 size-10 rounded-full bg-green-100 dark:bg-green-900/40 border border-transparent hover:border-green-300 transition-all" data-color="green"></button>
                            <!-- Blue -->
                            <button class="color-btn flex-shrink-0 size-10 rounded-full bg-blue-100 dark:bg-blue-900/40 border border-transparent hover:border-blue-300 transition-all" data-color="blue"></button>
                            <!-- Purple -->
                            <button class="color-btn flex-shrink-0 size-10 rounded-full bg-purple-100 dark:bg-purple-900/40 border border-transparent hover:border-purple-300 transition-all" data-color="purple"></button>
                        </div>
                    </div>
                    <!-- Actions List -->
                    <div class="space-y-1">
                        <button class="group flex w-full items-center gap-4 rounded-xl px-4 py-3 text-left hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-300 group-hover:bg-white group-hover:shadow-sm dark:group-hover:bg-gray-600 transition-all">
                                <span class="material-symbols-outlined text-xl">label</span>
                            </div>
                            <span class="text-base font-medium text-gray-700 dark:text-gray-200">Labels</span>
                            <span class="ml-auto material-symbols-outlined text-gray-400 text-lg">chevron_right</span>
                        </button>
                        <button class="group flex w-full items-center gap-4 rounded-xl px-4 py-3 text-left hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-300 group-hover:bg-white group-hover:shadow-sm dark:group-hover:bg-gray-600 transition-all">
                                <span class="material-symbols-outlined text-xl">share</span>
                            </div>
                            <span class="text-base font-medium text-gray-700 dark:text-gray-200">Share copy</span>
                        </button>
                        <button id="delete-btn" class="group flex w-full items-center gap-4 rounded-xl px-4 py-3 text-left hover:bg-red-50 dark:hover:bg-red-900/10 transition-colors mt-2">
                            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-red-100 dark:bg-red-900/30 text-red-500 dark:text-red-400 group-hover:bg-white group-hover:shadow-sm dark:group-hover:bg-red-900/50 transition-all">
                                <span class="material-symbols-outlined text-xl">delete</span>
                            </div>
                            <span class="text-base font-medium text-red-600 dark:text-red-400">Delete Note</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentNote = note ? note : null;
        let currentColor = currentNote ? currentNote.color : 'default';
        let isPinned = currentNote ? currentNote.pinned : false;

        // Helper function
        function formatDate(date) {
            return new Date(date).toLocaleDateString('en-US', { 
                month: 'short', 
                day: 'numeric',
                hour: 'numeric',
                minute: '2-digit'
            });
        }

        // Auto-save functionality
        let saveTimeout;
        function autoSave() {
            clearTimeout(saveTimeout);
            // Update status to "Saving..."
            const saveStatus = document.getElementById('save-status');
            if (saveStatus) saveStatus.textContent = 'Saving...';
            
            saveTimeout = setTimeout(() => {
                saveNote();
            }, 1000);
        }

        async function saveNote(redirectAfterSave = false) {
            const title = document.getElementById('title-input').value;
            const content = document.getElementById('content-input').value;
            const tags = Array.from(document.querySelectorAll('#tags-container span')).map(span => span.textContent.slice(1));

            const noteData = {
                title: title || 'Untitled',
                content: content || '',
                tags,
                color: currentColor,
                pinned: isPinned
            };

            try {
                if (currentNote) {
                    const response = await fetch(`/api/notes/${currentNote.id}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(noteData)
                    });
                    if (!response.ok) {
                        throw new Error('Failed to update note');
                    }
                    const updatedNote = await response.json();
                    Object.assign(currentNote, updatedNote);
                    console.log('Updated note from server:', updatedNote);
                } else {
                    const response = await fetch('/api/notes', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(noteData)
                    });
                    if (!response.ok) {
                        throw new Error('Failed to create note');
                    }
                    const newNote = await response.json();
                    currentNote = newNote;
                    history.replaceState(null, null, `/note/${newNote.id}`);
                    console.log('Created new note:', newNote);
                }
                console.log('Note saved successfully');

                // Trigger a localStorage event so the index page can update itself
                try {
                    const payload = JSON.stringify({ id: currentNote.id, ts: Date.now() });
                    localStorage.setItem('notes-updated', payload);
                    console.log('notes-updated set in localStorage:', payload);
                } catch (lsErr) {
                    console.error('Failed to set localStorage trigger:', lsErr);
                }

                // Ensure UI reflects pinned state (in case server normalized it)
                try {
                    const pinIcon = document.querySelector('.pin-icon');
                    const pinBtnEl = document.getElementById('pin-btn');
                    const pinnedState = currentNote && currentNote.pinned;
                    if (pinIcon) pinIcon.style.fontVariationSettings = `'FILL' ${pinnedState ? 1 : 0}`;
                    if (pinBtnEl) pinBtnEl.classList.toggle('text-primary', !!pinnedState);
                    console.log('Pin UI updated. pinned =', !!pinnedState);
                } catch (uiErr) {
                    console.error('Error updating pin UI:', uiErr);
                }
                
                // Update status to "Saved"
                const saveStatus = document.getElementById('save-status');
                if (saveStatus) {
                    saveStatus.textContent = 'Saved';
                    saveStatus.classList.remove('text-yellow-600', 'dark:text-yellow-500');
                    saveStatus.classList.add('text-gray-400', 'dark:text-gray-500');
                }
                
                if (redirectAfterSave) {
                    setTimeout(() => {
                        window.location.href = '/';
                    }, 500);
                }
            } catch (error) {
                console.error('Error saving note:', error);
                
                // Update status to "Error"
                const saveStatus = document.getElementById('save-status');
                if (saveStatus) {
                    saveStatus.textContent = 'Error';
                    saveStatus.classList.add('text-red-600', 'dark:text-red-500');
                }
                
                alert('Failed to save note. Please try again.');
            }
        }

        // Event listeners - Wait for DOM to be ready
        function initializeEventListeners() {
            console.log('Initializing event listeners...');
            const backBtn = document.getElementById('back-btn');
            const pinBtn = document.getElementById('pin-btn');
            const menuBtn = document.getElementById('menu-btn');
            const deleteBtn = document.getElementById('delete-btn');
            const titleInput = document.getElementById('title-input');
            const contentInput = document.getElementById('content-input');

            // Initialize pin UI based on current note state
            const pinIcon = document.querySelector('.keep-icon');
            if (pinBtn) {
                if (isPinned) {
                    if (pinIcon) {
                        pinIcon.textContent = 'push_pin';
                        pinIcon.style.fontVariationSettings = `'FILL' 1`;
                    }
                    pinBtn.classList.add('text-primary');
                } else {
                    if (pinIcon) {
                        pinIcon.textContent = 'push_pin';
                        pinIcon.style.fontVariationSettings = `'FILL' 0`;
                    }
                    pinBtn.classList.remove('text-primary');
                }
            }

            if (!backBtn) {
                console.error('back-btn not found');
                return;
            }

            console.log('Attaching back button listener');
            backBtn.addEventListener('click', function(e) {
                console.log('Back button event fired (anchor click)');
                // Let the browser follow the href (native navigation). No preventDefault() so it works even if JS errors occur.
            });

            if (pinBtn) {
                pinBtn.addEventListener('click', async (e) => {
                    e.preventDefault();
                    isPinned = !isPinned;
                    const pinIcon = document.querySelector('.pin-icon');
                    console.log('Pin clicked, new state =', isPinned);
                    if (pinIcon) {
                        pinIcon.style.fontVariationSettings = `'FILL' ${isPinned ? 1 : 0}`;
                    }
                    pinBtn.classList.toggle('text-primary', isPinned);
                    await saveNote(false);
                });
            }

            if (menuBtn) {
                menuBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    const sheet = document.getElementById('bottom-sheet');
                    if (sheet) sheet.classList.toggle('translate-y-full');
                });
            }

            if (deleteBtn) {
                deleteBtn.addEventListener('click', async (e) => {
                    e.preventDefault();
                    if (currentNote && confirm('Are you sure you want to delete this note?')) {
                        try {
                            const response = await fetch(`/api/notes/${currentNote.id}`, { method: 'DELETE' });
                            if (response.ok) {
                                window.location.href = '/';
                            } else {
                                console.error('Failed to delete note');
                            }
                        } catch (error) {
                            console.error('Error deleting note:', error);
                        }
                    }
                });
            }

            document.querySelectorAll('.color-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    document.querySelectorAll('.check-icon').forEach(icon => {
                        icon.style.display = 'none';
                    });
                    const checkIcon = btn.querySelector('.check-icon');
                    if (checkIcon) {
                        checkIcon.style.display = 'flex';
                    }
                    currentColor = btn.dataset.color;
                    autoSave();
                });
            });

            if (titleInput) titleInput.addEventListener('input', autoSave);
            if (contentInput) contentInput.addEventListener('input', autoSave);

            window.addEventListener('beforeunload', saveNote);
            console.log('Event listeners initialized successfully');
        }

        // Initialize when DOM is ready
        console.log('Document state:', document.readyState);
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeEventListeners);
        } else {
            initializeEventListeners();
        }
    </script>
</body>
</html>